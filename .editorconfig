# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Rust
[*.rs]
indent_size = 4

# TOML (Cargo.toml, etc.)
[*.toml]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# HTML
[*.html]
indent_size = 2

# CSS
[*.css]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
