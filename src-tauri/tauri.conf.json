{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SnapIt",
  "version": "0.4.14",
  "identifier": "com.snapit.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$VIDEO/**",
          "$DOWNLOAD/**",
          "$TEMP/**",
          "$HOME/**",
          "**"
        ]
      }
    },
    "windows": [
      {
        "label": "library",
        "title": "SnapIt Library",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "dragDropEnabled": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "resources": {
      "assets/backgrounds/": "assets/backgrounds/",
      "binaries/*.dll": "./"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": true
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0Njg5MzQ1NTRDQTVDNTAKUldSUVhNcFVSWk5vRkhyR1Qya0lRVTNoYnJ4dnoyeEJPU09LcE4wZ1lXcDdLekZpZTFQSU5qeHUK",
      "endpoints": [
        "https://github.com/walterlow/snapit/releases/latest/download/latest.json"
      ]
    },
    "crabcamera": {}
  }
}
